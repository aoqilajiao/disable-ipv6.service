[Unit]
Description=Disable IPv6 on boot
After=network-pre.target
Wants=network-pre.target

[Service]
Type=oneshot
ExecStart=/sbin/sysctl -w net.ipv6.conf.all.disable_ipv6=1
ExecStart=/sbin/sysctl -w net.ipv6.conf.default.disable_ipv6=1
ExecStart=/sbin/sysctl -w net.ipv6.conf.lo.disable_ipv6=1

[Install]
WantedBy=multi-user.target
